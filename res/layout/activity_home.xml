<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/button2"
            android:background="@drawable/homeathomebutton"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/button3"
            android:background="@drawable/explorebutton"
             />

        <Button
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selfbutton"
             />

        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/button5"
            android:background="@drawable/commentbutton"
             />

        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/uploadbutton"
             />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/loginbg" >

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>