<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kidgeniusdesigns.snapapp"
    android:versionCode="15"
    android:versionName="15.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kidgeniusdesigns.snapapp.HomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.FriendsList"
            android:label="@string/title_activity_friends_list" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.BigView"
            android:label="@string/title_activity_big_view"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity android:name="com.kidgeniusdesigns.snapapp.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:label="@string/app_name"
                    android:theme="@android:style/Theme.Holo.Light" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.FriendsSnapActivity"
            android:label="@string/title_activity_friends_snap" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.FeedActivity"
            android:label="@string/title_activity_feed"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
    </application>

</manifest>
