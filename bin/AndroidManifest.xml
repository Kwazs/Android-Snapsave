<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kidgeniusdesigns.snapapp"
    android:versionCode="28"
    android:versionName="28.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.kidgeniusdesigns.snapapp.helpers.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kidgeniusdesigns.snapapp.HomeActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.FriendsList"
            android:label="@string/title_activity_friends_list"
            android:noHistory="true"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.BigView"
            android:label="@string/title_activity_big_view"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:label="@string/app_name"
                    android:theme="@android:style/Theme.Holo.Light" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.FriendsSnapActivity"
            android:label="@string/title_activity_friends_snap"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.FeedActivity"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.SavedPeopleActivity"
            android:label="@string/title_activity_saved_people"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.UploadSnapActivity"
            android:label="@string/title_activity_upload_snap" >
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <!-- Google Analytics Version v4 needs this value for easy tracking -->
        <meta-data
            android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/global_tracker" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.kidgeniusdesigns.snapapp.UploadVideoActivity"
            android:label="@string/title_activity_upload_video" >
        </activity>
        <activity
            android:name="com.kidgeniusdesigns.snapapp.ViewVideosActivity"
            android:label="@string/title_activity_view_videos" >
        </activity>
    </application>

</manifest>
